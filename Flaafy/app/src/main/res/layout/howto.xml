<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1. Choose word: Type your word in, generate a random word, or use the word of the day.  "
        android:id="@+id/instruction1"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2. Speak: Press the Speak Button to start detecting your voice. "
        android:id="@+id/instruction2"
        android:gravity="center"
        android:layout_alignTop="@+id/instruction1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />
</RelativeLayout>
